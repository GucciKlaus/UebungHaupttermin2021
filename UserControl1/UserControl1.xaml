<UserControl x:Class="UserControl1.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:MVVM="MVVM"
             xmlns:local="clr-namespace:UserControl1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Grid.ColumnSpan="2" Name="lbl" VerticalContentAlignment="Center"></Label>
        <Image Grid.Row="1" Grid.Column="0" Name="can1"></Image>
        <Canvas Grid.Row="1" Grid.Column="1" Name="can2" Background="Black" SizeChanged="can2_SizeChanged"></Canvas>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
    </Grid>
</UserControl>
